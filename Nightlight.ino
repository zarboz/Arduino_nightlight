#include <Adafruit_NeoPixel.h>
#define PIN 4
#define NUMPIXELS 16

const int onbuttonPin = 3;
boolean currswitch1state = LOW;
boolean lastswitch1state = LOW;
boolean lampState = false;

// IMPORTANT: To reduce NeoPixel burnout risk, add 1000 uF capacitor across
// pixel power leads, add 300 - 500 Ohm resistor on first pixel's data input
// and minimize distance between Arduino and first pixel.  Avoid connecting
// on a live circuit...if you must, connect GND first.

Adafruit_NeoPixel strip = Adafruit_NeoPixel(NUMPIXELS, PIN, NEO_GRB + NEO_KHZ800);

void setup() {
  Serial.begin(9600);
  strip.begin();
  strip.show();
  pinMode(onbuttonPin, INPUT);
}

void loop() {
  currswitch1state = digitalRead(onbuttonPin);
  if (currswitch1state == HIGH && lastswitch1state == LOW) 
  {
   lampState = !lampState;  // toggle the lamp state
  }
  if (lampState == true)
  {
     colorWipe(strip.Color(255, 255, 255), 25);  // lamp on define color in the 3 rows R,G,B value or use another neopixel action listed below
  }
  else
  {
     colorWipe(strip.Color(0, 0, 0), 25);  // lamp off turn all lights off from wiping them on
  }
  lastswitch1state = currswitch1state;
}

void colorWipe(uint32_t c, uint8_t wait) {
  for(uint16_t i=0; i<strip.numPixels(); i++) {
      strip.setPixelColor(i, c);
      strip.show();
      delay(wait);
  }
}
